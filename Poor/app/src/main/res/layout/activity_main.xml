<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/i_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="71dp"
        android:fontFamily="serif"
        android:text="@string/title1"
        android:textSize="40sp"
        tools:text="@string/title1" />

    <TextView
        android:id="@+id/poor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/i_am"
        android:layout_alignBottom="@+id/i_am"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/i_am"
        android:text="@string/title2"
        android:textSize="50sp"
        android:textStyle="bold"
        tools:text="@string/title2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/poor"
        app:srcCompat="@drawable/coal" android:contentDescription="@string/todo" />
</RelativeLayout>
